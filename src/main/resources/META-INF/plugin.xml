<idea-plugin>
    <name>Minecraft Moonstone</name>
    <vendor email="invalid@invalid.invalid" url="https://github.com/ModdingX/Moonstone">noeppi_noeppi</vendor>

    <description>Create mod lists for curse and modrinth modpacks from inside the IDE</description>
    <change-notes>Change notes.</change-notes>

    <depends>com.intellij.modules.java</depends>
    <depends>com.intellij.gradle</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="Moonstone" implementationClass="org.moddingx.moonstone.file.MoonStoneFileType$" fieldName="MODULE$" patterns="modlist.json" />
        <fileEditorProvider implementation="org.moddingx.moonstone.file.MoonStoneEditorProvider" />
    </extensions>

    <actions>
        <!--suppress PluginXmlCapitalization -->
        <action id="org.moddingx.moonstone.action.ImportModpackAction"
                class="org.moddingx.moonstone.action.ImportModpackAction" text="Import CurseForge modpack"
                description="Opens a file selector to import an existing modpack based on an exported zip.">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>